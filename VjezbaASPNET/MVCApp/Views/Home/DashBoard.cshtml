@model IEnumerable<MVCLibrary.Models.PacketModel>

@{
    ViewBag.Title = "DashBoard";
}

<h2 style="font-weight:bold">Vaši Aktivni Paketi</h2>
<br />
<p style="margin-bottom:20px" class="btn btn-default">
    @Html.ActionLink("Dodaj Novi Paket", "AddCustomerPacket", "Home")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PacketName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PacketName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
